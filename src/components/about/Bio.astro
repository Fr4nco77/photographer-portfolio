---
import type { Translate } from "@i18n/utils";
import { Image } from "astro:assets";

interface Props {
  t: Translate;
}

const { t } = Astro.props;
---

<section class="mx-auto max-w-7xl px-6 py-16">
  <div class="grid gap-16 lg:grid-cols-2">
    <div class="hidden overflow-hidden rounded-2xl max-h-[600px] lg:block">
      <Image
        width={2826}
        height={4244}
        src="/amelia/amelia6.jpg"
        alt="Photography equipment"
        loading="lazy"
        class="size-full object-cover object-top"
      />
    </div>
    <div>
      <h2 class="font-title mb-6 text-4xl tracking-tighter md:text-5xl">
        {t("about.bio.title")}
      </h2>
      <p class="mb-4 text-lg leading-relaxed">
        {t("about.bio.p1")}
      </p>
      <p class="mb-4 text-lg leading-relaxed">
        {t("about.bio.p2")}
      </p>
      <p class="text-lg leading-relaxed">
        {t("about.bio.p3")}
      </p>
    </div>
  </div>
</section>

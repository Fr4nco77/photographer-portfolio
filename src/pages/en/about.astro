---
import type { languages } from "@i18n/ui";
import { useTranslations } from "@i18n/utils";
import Layout from "@layouts/Layout.astro";
import Bio from "@components/about/Bio.astro";
import SkillsExperience from "@components/about/Skills&Experience.astro";
import CTA from "@components/CTA.astro";
import Separator from "@components/Separator.astro";
import HeroSection from "@components/HeroSection.astro";
import { Image } from "astro:assets";

const currentLocale = Astro.currentLocale as keyof typeof languages;
const t = useTranslations(currentLocale);
---

<Layout title={t("pageTitle.about")} description={t("description.about")}>
  <HeroSection
    t={t}
    title="Amelia Allen"
    subtitle={t("about.subtitle")}
    height="h-screen"
  >
    <Image
      width={1}
      height={1}
      src="/landing/hero.webp"
      alt="Professional photography studio with lighting equipment"
      loading="eager"
      class="size-full object-cover"
    />
  </HeroSection>
  <Bio t={t} />
  <Separator />
  <SkillsExperience t={t} />
  <CTA lang={currentLocale} t={t} />
</Layout>
